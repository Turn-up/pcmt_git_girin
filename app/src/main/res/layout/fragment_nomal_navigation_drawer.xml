<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nomal_nav_backround"
    android:orientation="vertical"
    tools:context="com.pcm.pcmmanager.nomal.drawer.NomalNavigationDrawer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomal_drawer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="29dp"
            android:text="이름"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="31dp"
            android:text="님"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/nomal_drawer_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/setting_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/nomal_drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:text="android.studio@android.com"
        android:textColor="#ffffff"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nomal_drawer_alarm"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:onClick="onNavClick"
                android:text="알림 설정"
                android:textColor="#515151"
                android:textSize="16sp" />

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/underbar_10" />

        <TextView
            android:id="@+id/nomal_drawer_ask"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:onClick="onNavClick"
            android:text="문의하기"
            android:textColor="#515151"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/underbar_10" />

        <TextView
            android:id="@+id/nomal_drawer_notice"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:onClick="onNavClick"
            android:text="공지사항"
            android:textColor="#515151"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/underbar_10" />

        <TextView
            android:id="@+id/nomal_drawer_event"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:onClick="onNavClick"
            android:text="이벤트"
            android:textColor="#515151"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/underbar_10" />

        <TextView
            android:id="@+id/nomal_drawer_my_estimate"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:onClick="onNavClick"
            android:text="내 견적"
            android:textColor="#515151"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/underbar_10" />

        <TextView
            android:id="@+id/nomal_drawer_use_way"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:onClick="onNavClick"
            android:text="이용방법"
            android:textColor="#515151"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/underbar_10" />

        <Button
            android:id="@+id/nomal_drawer_logout"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:text="회원탈퇴 및 로그아웃"
            android:textColor="#515151"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/nomal_drawer_logout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expert_drawer_logout_background"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/nomal_drawer_user_out_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="21dp"
                android:onClick="onLogout"
                android:text="회원탈퇴"
                android:textColor="#959595"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/nomal_drawer_logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:onClick="onLogout"
                android:text="로그아웃"
                android:textColor="#959595"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
