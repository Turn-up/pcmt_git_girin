<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pcm.pcmmanager.expert.bid_do.BidDoActivity"
    tools:showIn="@layout/activity_bid_do">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="337dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/expert_estimate_market_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Large Text"
                android:textColor="#515151"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/expert_estimate_market_type_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expert_estimate_market_type_title"
                android:layout_marginTop="10dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#838383"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/expert_estimate_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#838383"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/expert_estimate_bid_count_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/expert_estimate_bid_count"
                android:layout_alignEnd="@+id/expert_estimate_end_date"
                android:layout_alignRight="@+id/expert_estimate_end_date"
                android:src="@drawable/bidcount_icon" />

            <TextView
                android:id="@+id/expert_estimate_bid_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/expert_estimate_market_type_sub"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/expert_estimate_bid_count_image"
                android:layout_toStartOf="@+id/expert_estimate_bid_count_image"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff8f00"
                android:textSize="13sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/underbar28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expert_estiamte_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#838383"
                android:textSize="13sp" />

            <!--<TextView-->
            <!--android:id="@+id/detail_header_sub"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:text="Small Text"-->
            <!--android:textAppearance="?android:attr/textAppearanceSmall" />-->
            <!---->
            <!--<TextView-->
            <!--android:id="@+id/textView16"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="만원"-->
            <!--android:textAppearance="?android:attr/textAppearanceSmall" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/expert_estimate_content"
            android:layout_width="304dp"
            android:layout_height="210dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/expert_bid_do_info_text_box"
            android:text="content"
            android:textColor="#838383"
            android:textSize="12sp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:gravity="bottom"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/expert_estimate_bid_do_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom">

            <ImageButton
                android:id="@+id/btn_expert_estimate_bid_do_up_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@android:color/transparent"
                android:onClick="onBidUpDown"
                android:src="@drawable/expert_bid_do_up_arrow"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/expert_estimate_bid_do_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/btn_expert_estimate_bid_do_down_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:onClick="onBidUpDown"
                        android:src="@drawable/expert_bid_do_down_arrow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/estimate_put_money_title_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:textColor="#515151"
                            android:textSize="15dp"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/estimate_put_money_editText_1"
                            android:layout_width="227dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_marginRight="18dp"
                            android:paddingTop="3dp"
                            android:background="@drawable/expert_bid_do_input_won"

                            android:textColor="#515151"
                            android:textSize="16sp"
                            android:inputType="number"
                            android:paddingRight="23dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/estimate_put_money_title_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:textColor="#515151"
                            android:textSize="15dp"
                            android:text="dd"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/estimate_put_money_editText_2"
                            android:layout_width="227dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18dp"
                            android:textColor="#515151"
                            android:textSize="16sp"
                            android:paddingTop="3dp"
                            android:background="@drawable/expert_bid_do_input_won"
                            android:gravity="right"
                            android:inputType="number"
                            android:paddingRight="23dp" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>
            <ImageButton
                android:id="@+id/btn_expert_estimate_bid_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:src="@drawable/expert_bid_do_btn"
                android:text="입찰하기" />
        </LinearLayout>




    </RelativeLayout>
</LinearLayout>
