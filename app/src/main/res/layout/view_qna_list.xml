<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/qna_list_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015.05.06"
        android:id="@+id/qna_list_regdate"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/qna_list_writer"
        android:layout_below="@+id/qna_list_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:singleLine="true"
        android:id="@+id/qna_list_content"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/qna_list_writer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/qna_list_review_count"
        android:layout_above="@+id/imageView2"
        android:layout_alignRight="@+id/qna_list_regdate"
        android:layout_alignEnd="@+id/qna_list_regdate" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/underbar_20"
        android:id="@+id/imageView2"
        android:layout_below="@+id/qna_list_content"
        android:layout_centerHorizontal="true" />
</RelativeLayout>