<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        app:font="custom1"
                        android:id="@+id/detail_header_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medium Text"
                        android:textColor="#515151"
                        android:textSize="17sp" />

                    <TextView
                        app:font="custom2"
                        android:id="@+id/detail_header_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D-3"
                        android:textColor="#838383"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/detail_header_market_type"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            app:font="custom2"
                            android:id="@+id/detail_header_market_type_sub1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:textColor="#838383"
                            android:textSize="13sp" />

                        <TextView
                            app:font="custom2"
                            android:id="@+id/detail_header_market_type_sub2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:textColor="#838383"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <TextView
                            app:font="custom2"
                            android:id="@+id/detail_header_market_type_sub3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:textColor="#838383"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <TextView
                            app:font="custom2"
                            android:id="@+id/detail_header_market_type_sub4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:textColor="#838383"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        app:font="custom2"
                        android:id="@+id/deail_bid_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="bid"
                        android:textColor="#ff8f00"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/detail_bid_count_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/bidcount_icon"
                        android:visibility="visible" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/underbar28" />


                <TextView
                    app:font="custom1"
                    android:id="@+id/detail_header_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="Small Text"
                    android:textColor="#838383"
                    android:textSize="13sp" />


                <TextView
                    app:font="custom1"
                    android:id="@+id/detail_header_content"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box_estimate_detail"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="content"
                    android:textColor="#838383"
                    android:textSize="12sp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main_tab_under_box" />
</LinearLayout>