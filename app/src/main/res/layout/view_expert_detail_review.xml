<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:background="@drawable/review_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/expert_detail_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="20dp"
        android:text="Medium Text"
        android:textColor="#515151"
        android:textSize="13sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="18dp"
    android:gravity="right"
    android:layout_marginRight="21dp"
    android:layout_gravity="bottom">
        <RatingBar
            android:id="@+id/expert_detail_review_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:stepSize="1"
            style="@style/reviewRatingBar"
            android:layout_marginRight="7dp" />

        <TextView
            android:id="@+id/expert_detail_review_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textSize="11sp"
            android:textColor="#838383"/>

        <TextView
            android:id="@+id/expert_detail_review_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textSize="11sp"
            android:textColor="#838383"/>
</LinearLayout>
</LinearLayout>