<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pcm.pcmmanager.qna.detail.QnaDetailActivity"
    tools:showIn="@layout/activity_qna_detail">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/qna_detail_rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/qna_detail_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:background="@drawable/qna_detail_input_box"
            android:hint="댓글을 입력해 주세요"
            android:paddingLeft="19dp"
            android:textColor="#b4b4b4"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/qna_detail_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:background="@android:color/transparent"
            android:src="@drawable/qna_detail_enter_icon" />
    </RelativeLayout>
</RelativeLayout>
