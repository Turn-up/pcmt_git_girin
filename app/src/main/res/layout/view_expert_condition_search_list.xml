<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="21dp"
    android:layout_marginRight="21dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.RoundedImageView
            android:id="@+id/expert_condition_search_image"
            android:layout_width="66dp"
            android:layout_height="89dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            app:border_width="1dip"
            app:corner_radius="5dip"
            app:border_color="#ffffff"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/expert_search_result_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <TextView
                android:id="@+id/expert_condition_search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#515151"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/expert_condition_search_name"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/expert_condition_search_name"
                android:layout_toRightOf="@+id/expert_condition_search_name"
                android:text="회계사"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#515151"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/expert_condition_search_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/expert_condition_search_name"
                android:layout_marginRight="35dp"
                android:text="coment"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/expert_condition_search_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/expert_search_result_office_icon"
                android:drawablePadding="7dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/expert_condition_search_career"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/expert_search_result_person_icon"
                android:drawablePadding="7dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#666666"
                android:textSize="13sp" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/underbar21_" />
</LinearLayout>