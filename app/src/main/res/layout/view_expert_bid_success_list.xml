<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bid_success_market_type_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/bid_success_market_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Large Text"
                    android:textColor="#515151"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/bid_success_market_type_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bid_success_market_type_title"
                    android:text="Small Text"
                    android:textColor="#838383"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/bid_success_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textSize="10sp"
                    android:textColor="#838383"
                    android:layout_marginTop="2dp"
                    android:text="16.05.08 마감" />

                <TextView
                    android:id="@+id/bid_success_bid_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/bid_success_end_date"
                    android:layout_alignRight="@+id/bid_success_end_date"
                    android:layout_alignTop="@+id/bid_success_market_type_sub"
                    android:drawablePadding="7dp"
                    android:drawableRight="@drawable/bidcount_icon"
                    android:text="New Text"
                    android:textColor="#ff8f00"
                    android:textSize="13sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bid_success_item_onclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/expert_bid_success_list_backround"
                android:orientation="horizontal"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="21dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bid_success_month_money_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#959595"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/bid_success_month_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="1-000000000"
                            android:textSize="13sp"
                            android:textColor="#ff9800" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="원"
                            android:paddingRight="15dp"
                            android:textSize="11sp"
                            android:textColor="#ff8b00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="21dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bid_success_month_money_type2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:text="과세금액"
                            android:textColor="#959595"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/bid_success_edit_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="#ff9800"
                            android:gravity="right"
                            android:text="Small Text"/>

                        <TextView
                            android:id="@+id/won"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="원"
                            android:paddingRight="15dp"
                            android:textSize="11sp"
                            android:textColor="#ff8b00" />

                        <TextView
                            android:id="@+id/persent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="%"
                            android:paddingRight="15dp"
                            android:textSize="11sp"
                            android:textColor="#ff8b00" />
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/bid_success_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/expert_bid_success_list_call_icon"
                    android:layout_marginRight="21dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/underbar66_18" />


</LinearLayout>