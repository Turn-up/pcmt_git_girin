<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/estimate_confrim_background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="21dp">

        <ImageView
            android:id="@+id/dialog_estimate_confirm_expert_image"
            android:layout_width="66dp"
            android:layout_height="89dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialog_estimate_confirm_expert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textSize="16sp"
                android:layout_marginLeft="13dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dialog_estimate_confirm_expert_name"
                android:layout_toEndOf="@+id/dialog_estimate_confirm_expert_name"
                android:layout_toRightOf="@+id/dialog_estimate_confirm_expert_name"
                android:text="회계사"
                android:textSize="13sp"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView7"
                android:src="@drawable/tex_icon" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignTop="@+id/textView9"
                android:layout_toLeftOf="@+id/textView10"
                android:layout_toStartOf="@+id/textView10"
                android:layout_marginRight="2dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/dialog_estimate_confirm_month_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textColor="#ff8f00"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/dialog_estimate_confirm_modify_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textColor="#ff8f00"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout4"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/linearLayout4"
                android:layout_toStartOf="@+id/linearLayout4"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="조정료"
                    android:textColor="#666666"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="4dp"
                android:text="원"
                android:textColor="#ff8f00"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="#ff8f00"
                android:textSize="13sp"
                android:layout_below="@+id/imageView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/dialog_estimate_confirm_confirm_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/estimate_confirm_btn"
        android:layout_marginTop="105dp" />

    <ImageButton
        android:id="@+id/dialog_estimate_confirm_confirm_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/estimate_confirm_cancle_btn"
        android:layout_marginTop="7dp" />


</LinearLayout>